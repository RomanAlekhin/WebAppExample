@{
    ViewData["Title"] = "User List";
}

@model IEnumerable<Example.Models.User>

<div class="container">
    <h1>User List</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Age</td>
                    <td>
                        <a class="btn btn-warning" role="button" href="/User/@user.Id/Edit">Edit</a>

                        <!-- Pressing Delete triggers the confirmation modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDelete_@user.Id">Delete</button>

                        <!-- Modal for deleting confirmation -->
                        <div class="modal fade" id="confirmDelete_@user.Id" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this user?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <a class="btn btn-danger" role="button" asp-area="" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Add", "User")" class="btn btn-success mt-3">Create New User</a>

</div>
