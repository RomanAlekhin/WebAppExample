@model Example.Models.User

@{
    var isNewUser = Model.Id == 0;
    ViewData["Title"] = isNewUser ? "Add New User" : "Edit User";
}

<div class="container">
    <h1>@(isNewUser ? "Add New User" : "Edit User")</h1>
    <form method="post" action="@Url.Action(isNewUser ? "Add" : "Edit")">
        @if (!isNewUser)
        {
            <input type="hidden" class="form-control" id="id" name="Id" value="@Model.Id" required />
        }
        
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="Name" value="@Model.Name" required>
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="number" class="form-control" id="age" name="Age" value="@Model.Age" required min="18" max="99">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
